<div class="title">
  <div class="chat_title">
    hogefuga
  </div>
  <div class="end_btn">
    <a href="#">チャットを終了する</a>
  </div>
</div>

<div class="chat">
  <%= render partial: 'message' , collection: @messages %>
</div>

<%= form_with model: [@room, @message], html: {class: "type_message"}, local: true do |f| %>
  <div class="message-from">
    <%= f.text_field :content, class: "form-input", placeholder: "type a message" %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: "hidden" %>
    </label>
  </div>
  <%= f.submit "送信", class: "form-submit" %>
  
<% end %>